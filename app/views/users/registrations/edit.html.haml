%br
.row
  .col-md-4.col-md-offset-4.form
    %h2 Edit your details
    %hr
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, label: false, placeholer: "email",disabled:true
        = f.input :avatar
        = f.input :name
        = f.input :phone_number
        = f.input :about
        = f.input :facebook,label: "Facebok Username"
        = f.input :twitter,label: "Twitter Username"
        = f.input :linkedin,label: "Linkedin Profile URL"
        = f.association :workshop
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false,label: false, placeholder: "New Password"
        = f.input :password_confirmation, required: false,label: false, placeholder: "Confirm it"
        = f.input :current_password, required: true,label: false, placeholder: "Old Password(necessarry to save changes)"
      .form-actions
        = f.button :submit, "Update", class: "btn btn-primary pull-right"
    = link_to "Back", :back,class: "center btn btn-default pull-left"
    %br
    %br
    %hr
    %h3.center Cancel my account
    %p.center
      Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"}
    