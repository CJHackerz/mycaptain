.col-md-4
	.aggregator.form
		-if user_signed_in?
			%h5 
				Hello,
				=current_user.name
			%hr
			%p Here are some of the recent posts by your captains:
			-@posts = Post.all.order("created_at DESC")
			-@posts.each do |post|
				=link_to post.title, post_path(post)
				.pull-right=time_ago_in_words(post.created_at)
				%br
			%br
			%h5
				Internet on 
			%hr


