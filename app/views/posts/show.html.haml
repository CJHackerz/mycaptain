
.row
	.col-md-8.form
		


		=image_tag @post.cover.url(:medium),class: "cover thumbnail img-responsive"
		%h1= @post.title
		%hr
		%p=simple_format(@post.content)
		%hr
		%h3.caption Images
		%hr
		-@post.stuffs.each do |stuff|
			.thumbnail
				=image_tag stuff.image.url(:medium),class: "post img-responsive"
				%p.caption=stuff.tag
		%hr
		%h3.caption Videos
		%hr
		-@post.embedurls.each do |aurl|
			.thumbnail.embed-responsive.embed-responsive-16by9
				%iframe{:allowfullscreen => true, :frameborder => "0", :height => "315", :src => "https://www.youtube.com/embed/#{aurl.url.split("=").last}"}
			%p.caption=aurl.tag
			%br
		%hr
		


		#comments
			%h3.caption#comments-count
				=pluralize(@comments.count, "Comment")
			%hr
			-@post.comments.each do |comment|
				-if comment.user_id ==nil
					#admin_comment
						%p
							=image_tag comment.admin.avatar.url(:thumb), class: "img-rounded avatar"
							=link_to comment.admin.name, admin_path(comment.admin.id)
							=comment.content
						%p.pull-right= time_ago_in_words(comment.created_at)
						%hr
					%br
				-else
					%p
						=image_tag comment.user.avatar.url(:thumb), class: "img-rounded avatar"
						=link_to comment.user.name, user_path(comment.user.id)
						=comment.content
					%p.pull-right= time_ago_in_words(comment.created_at)
					%hr
			=render 'comments/form'

	=render 'aggregator/aside'
