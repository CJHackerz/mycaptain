= simple_form_for(@post) do |f|
	= f.error_notification

	.form-inputs
		= f.association :workshop
		= f.input :cover
		= f.input :title
		= f.input :content
		%h3 YouTube Videos
		#youtube
			= f.simple_fields_for :embedurls do |embedurl|
				= render 'embedurl_fields', f: embedurl
			.links
				= link_to_add_association 'add youtube url', f, :embedurls
		%h3 Content Images
		#youtube
			= f.simple_fields_for :stuffs do |stuff|
				= render 'stuff_fields', f: stuff
			.links
				= link_to_add_association 'add content image', f, :stuffs

	.form-actions
		= f.button :submit
